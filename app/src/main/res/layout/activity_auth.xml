<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    tools:context="com.example.dell.commonroom.AuthActivity">

    <EditText
        android:id="@+id/auth_phone"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/auth_Verification"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="@string/phone_number"
        android:inputType="textPersonName|number|phone" />

    <EditText
        android:id="@+id/auth_Verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Verification"
        android:inputType="textPersonName"
        android:visibility="invisible" />

    <Button
        android:id="@+id/auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Send Verification Code" />

    <TextView
        android:id="@+id/auth_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="31dp"
        android:text="You Will Be Send A Verification Code"
        android:textSize="24sp" />
</RelativeLayout>
